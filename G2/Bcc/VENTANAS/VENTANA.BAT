@echo off

if '%1'=='' goto nopar

if '%1'=='t' echo Creando librer며 de ventanas TINY
if '%1'=='T' echo Creando librer며 de ventanas TINY
if '%1'=='s' echo Creando librer며 de ventanas SMALL
if '%1'=='S' echo Creando librer며 de ventanas SMALL
if '%1'=='c' echo Creando librer며 de ventanas COMPACT
if '%1'=='C' echo Creando librer며 de ventanas COMPACT
if '%1'=='m' echo Creando librer며 de ventanas MEDIUM
if '%1'=='M' echo Creando librer며 de ventanas MEDIUM
