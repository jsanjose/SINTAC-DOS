if '%1'=='L' echo Creando librer며 de ventanas LARGE
if '%1'=='h' echo Creando librer며 de ventanas HUGE
if '%1'=='H' echo Creando librer며 de ventanas HUGE

bcc -c -d -N -m%1 raton.c
bcc -c -d -N -m%1 ventana.c
bcc -c -d -N -m%1 menu.c
bcc -c -d -N -m%1 cuadro.c
bcc -c -d -N -m%1 ayuda.c
bcc -c -d -N -m%1 editor.c

if exist ventana%1.lib del ventana%1.lib > NUL

tlib ventana%1.lib +raton.obj +ventana.obj +menu.obj +cuadro.obj +ayuda.obj +editor.obj

del raton.obj > NUL
del ventana.obj > NUL
del menu.obj > NUL
del cuadro.obj > NUL
del ayuda.obj > NUL
del editor.obj > NUL

goto fin

